rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdminEmail() {
      return isSignedIn()
        && request.auth.token.email != null
        && request.auth.token.email in [
          "ndsuporte1@gmail.com",
          "dr.flaviosalomao@hotmail.com"
        ];
    }

    // Vitrine pública de profissionais
    match /supportNetwork/{docId} {
      allow read: if true;
      allow write: if isAdminEmail();
    }

    // Configurações públicas de vitrine/preços (somente leitura no app cliente)
    match /supportNetworkSettings/{docId} {
      allow read: if true;
      allow write: if isAdminEmail();
    }

    // Modelos globais de rotina definidos pelo admin
    match /routineTemplatesGlobal/{docId} {
      allow read: if true;
      allow write: if isAdminEmail();
    }

    // Demais coleções do app exigem autenticação
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
