rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn()
        && request.auth.token.email != null
        && request.auth.token.email in [
          "ndsuporte1@gmail.com",
          "dr.flaviosalomao@hotmail.com"
        ];
    }

    // Perfil e galeria da Rede de Apoio
    match /support-network/profiles/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin()
        && request.resource.size <= 1500000
        && request.resource.contentType.matches('image/.*');
    }

    match /support-network/gallery/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin()
        && request.resource.size <= 2000000
        && request.resource.contentType.matches('image/.*');
    }

    match /support-network/videos/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin()
        && request.resource.size <= 20000000
        && request.resource.contentType == 'video/mp4';
    }

    // ✅ fotos de perfil de gerentes
    match /managers/profiles/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin()
        && request.resource.size <= 1500000
        && request.resource.contentType.matches('image/.*');
    }

    // Tudo o resto: somente leitura pública
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
